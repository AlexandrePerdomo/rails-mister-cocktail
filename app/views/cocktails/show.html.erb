<p>
  <strong>Cocktail:</strong>
  <%= @cocktail.name %>
</p>

<p>
  <strong>Doses:</strong>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%=  dose.description  %> <%=  dose.ingredient.name %></li>


    <%= link_to 'Delete', cocktail_dose_path(dose), method: :delete,
    data: { confirm: "Are you sure?" } %>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %> |

<%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %>
